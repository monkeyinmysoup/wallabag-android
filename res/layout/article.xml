<?xml version="1.0" encoding="utf-8"?>
<fr.gaulupeau.apps.wallabag.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll" >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/defaultTopPadding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:paddingLeft="@dimen/defaultSidePadding"
            android:paddingRight="@dimen/defaultSidePadding" >

            <TextView
                android:id="@+id/article_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp" />
            
            <TextView
                android:id="@+id/article_url_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:id="@+id/viewLine"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/defaultSidePadding"
            android:layout_marginRight="@dimen/defaultSidePadding"
            android:background="#000000" />

        <WebView
            android:id="@+id/webContent"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.64" />
    </LinearLayout>

</fr.gaulupeau.apps.wallabag.MyScrollView>
