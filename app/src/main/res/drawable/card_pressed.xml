<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">
            <solid android:color="@color/card_pressed_shadow" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:drawable="?android:attr/selectableItemBackground">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <solid android:color="@color/card_pressed_background" />
            <corners android:radius="@dimen/card_corner_radius" />
            <padding
                android:top="@dimen/card_padding"
                android:bottom="@dimen/card_padding"
                android:left="@dimen/card_padding"
                android:right="@dimen/card_padding" />
        </shape>
    </item>
</layer-list>