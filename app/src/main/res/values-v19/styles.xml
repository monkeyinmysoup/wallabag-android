<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Notification Overlap -->
    <style name="Theme.Wallabag.Overlap" parent="Theme.Wallabag">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Theme.Wallabag.Dark.Overlap" parent="Theme.Wallabag.Dark">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Theme.Wallabag.OverlapTop" parent="Theme.Wallabag">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Wallabag.Dark.OverlapTop" parent="Theme.Wallabag.Dark">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>