<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:textAppearance">@style/Font</item>
    </style>

    <style name="MyActionBarBlackStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/action_bar_black</item>
    </style>

    <style name="AppThemeWhite" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/white_opaque</item>
    </style>

    <style name="AppThemeBlack" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@color/background_black</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/MyActionBarBlackStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/action_bar</item>
    </style>

    
    <style name="TextAppearance.Wallabag.FloatLabel" parent="Font">
        <item name="android:textColor">@color/primary_font</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font">
        <item name="pix_font">Tellural.ttf</item>
        <item name="pix_fontBold">Tellural-Bold.ttf</item>
        <item name="pix_fontItalic">Tellural-Italic.ttf</item>
        <item name="pix_fontBoldItalic">Tellural-BoldItalic.ttf</item>
    </style>

    <style name="FontLarge" parent="Font">
        <item name="android:textSize">18sp</item>
    </style>
</resources>