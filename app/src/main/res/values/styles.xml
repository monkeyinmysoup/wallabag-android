<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemeWhite" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white_opaque</item>
        <item name="android:actionBarStyle">@style/ActionBarLight</item>
        <item name="android:textColor">@color/primary_font</item>
        <item name="android:popupMenuStyle">@style/PopupMenuLight</item>
    </style>

    <style name="AppThemeBlack" parent="android:Theme.Holo">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:actionBarStyle">@style/ActionBarDark</item>
        <item name="android:textColor">@color/font_light</item>
        <item name="android:popupMenuStyle">@style/PopupMenuDark</item>
    </style>

    <style name="ActionBarLight" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_light</item>
        <item name="android:textAppearance">@style/FontMedium</item>
        <item name="android:textColor">@color/font_light</item>
    </style>
    <style name="ActionBarDark" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_dark</item>
        <item name="android:textAppearance">@style/FontMedium</item>
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="PopupMenuLight" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/primary</item>
        <item name="android:textColor">@color/font_light</item>
    </style>
    <style name="PopupMenuDark" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/background_dark</item>
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="TextAppearance.Wallabag.FloatLabel" parent="Font">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TransparentButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/invisible_button</item>
    </style>

    <style name="Font">
        <item name="pix_font">Tellural.ttf</item>
        <item name="pix_fontBold">Tellural-Bold.ttf</item>
        <item name="pix_fontItalic">Tellural-Italic.ttf</item>
        <item name="pix_fontBoldItalic">Tellural-BoldItalic.ttf</item>
    </style>

    <style name="FontSmall" parent="Font">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="FontMedium" parent="Font">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="FontLarge" parent="Font">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="FontTitle" parent="FontMedium">
        <item name="android:textColor">@color/font_light</item>
        <item name="android:shadowColor">#78ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">0</item>
    </style>
</resources>