<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Additional Dark theme -->
    <style name="Theme.Wallabag.Dark" parent="Theme.Wallabag">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Wallabag.Dark</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <!-- Custom ActionBar for the dark theme -->
    <style name="ActionBar.Solid.Wallabag.Dark" parent="ActionBar.Solid.Wallabag">
        <item name="android:background">@color/action_bar_dark</item>
        <item name="android:backgroundStacked">@color/action_bar_dark</item>
        <item name="android:backgroundSplit">@color/action_bar_dark</item>
    </style>

    <style name="Theme.Wallabag.OverFlow">
        <item name="android:src">@drawable/ic_overflow_dark</item>
    </style>

    <!-- FloatLabel style -->
    <style name="TextAppearance.Wallabag.FloatLabel" parent="Font">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Font related styles -->
    <style name="Font">
        <item name="pix_font">OpenSans-Regular.ttf</item>
        <item name="pix_fontBold">OpenSans-Bold.ttf</item>
        <item name="pix_fontItalic">OpenSans-Italic.ttf</item>
        <item name="pix_fontBoldItalic">OpenSans-BoldItalic.ttf</item>
    </style>

    <style name="FontSmall" parent="Font">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">#a0888888</item>
    </style>

    <style name="FontMedium" parent="Font">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="FontLarge" parent="Font">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="FontTitle" parent="FontMedium">
        <item name="android:textColor">@color/font_light</item>
        <item name="android:shadowColor">#78ffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <!-- Other styles -->
    <style name="TransparentButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/invisible_button</item>
    </style>
    <style name="DomainTextView" parent="FontSmall">
        <item name="android:textColor">#a0888888</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>