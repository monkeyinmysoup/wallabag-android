<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.pixplicity.fonttextutils.FontTextView
            android:id="@+id/general_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/defaultSidePadding"
            android:paddingLeft="@dimen/defaultSidePadding"
            android:paddingTop="@dimen/defaultTopPadding"
            android:paddingBottom="@dimen/defaultTopPadding"
            android:text="@string/general"
            android:textAppearance="@style/FontLarge" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"
            tools:ignore="ContentDescription" />

        <com.pixplicity.fonttextutils.FontTextView
            android:id="@+id/look_and_feel_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/defaultSidePadding"
            android:paddingLeft="@dimen/defaultSidePadding"
            android:paddingTop="@dimen/defaultTopPadding"
            android:paddingBottom="@dimen/defaultTopPadding"
            android:text="@string/look_and_feel"
            android:textAppearance="@style/FontLarge" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"
            tools:ignore="ContentDescription" />

        <com.pixplicity.fonttextutils.FontTextView
            android:id="@+id/account_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/defaultSidePadding"
            android:paddingLeft="@dimen/defaultSidePadding"
            android:paddingTop="@dimen/defaultTopPadding"
            android:paddingBottom="@dimen/defaultTopPadding"
            android:text="@string/account"
            android:textAppearance="@style/FontLarge" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"
            tools:ignore="ContentDescription" />

        <com.pixplicity.fonttextutils.FontTextView
            android:id="@+id/about_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/defaultSidePadding"
            android:paddingLeft="@dimen/defaultSidePadding"
            android:paddingTop="@dimen/defaultTopPadding"
            android:paddingBottom="@dimen/defaultTopPadding"
            android:text="@string/about"
            android:textAppearance="@style/FontLarge" />
    </LinearLayout>

</ScrollView>